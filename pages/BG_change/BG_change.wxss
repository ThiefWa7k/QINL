/* pages/BG_change/BG_change.wxss */

.mod {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #ebf5fa;
}

.items_mod {
  position: relative;
  height: 640rpx;
  width: 650rpx;
  margin: 0 auto;
  margin-top: 400rpx;
  background: #fff;
}

.content_row {
  width: 100%;
  height: 320rpx;
  align-content: left;
}

.pic {
  position: absolute;
  height: 532rpx;
  width: 300rpx;
  left: 60rpx;
  top: -266rpx;
  background: #fff;
  box-shadow: 0rpx 20rpx 80rpx 10rpx #f1f1f1;
}

.pic image {
  width: 100%;
  height: 100%;
  animation:picdisplay 4s ease-in;
}

@keyframes picdisplay{
  from { opacity: 0}
  to { opacity: 1}
}


.pic_option {
  position: relative;
  width: 207rpx;
  height: 207rpx;
  left: 420rpx;
  top: 60rpx;
}

.pic_option view {
  height: 40rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.pic_option image {
  vertical-align: middle;
  display: inline-block;
}

.pic_option text {
  margin-left: 20rpx;
  color: #3689b3;
  font-size: 24rpx;
  height: 40rpx;
}

.pics image {
  height: 27rpx;
  width: 34rpx;
}

.color image {
  height: 29rpx;
  width: 36rpx;
}

.txt image {
  height: 26rpx;
  width: 34rpx;
}

.hot_t {
  color: #3689b3;
  font-size: 24rpx;
  margin-left: 60rpx;
}

.new_t {
  color: #3689b3;
  font-size: 24rpx;
  margin-left: 40rpx;
}

.hot_new {
  height: 100rpx;
}

.d_line {
  width: 530rpx;
  height: 31rpx;
  border-top: 1rpx #ebf5fa solid;
  margin: 0 auto;
}

.albums {
  width: 610rpx;
  height: 160rpx;
  margin: 0 auto;
}

.albums_item image {
  width: 100%;
  height: 100%;
}

.albums_item {
  width: 60rpx;
  height: 100rpx;
  background: #ebf5fa;
  float: left;
  margin: 10rpx 40rpx;
}

.albums_item_focus {
  box-shadow: 0rpx 10rpx 30rpx 10rpx #f4f4f4;
  animation:boxshadow 0.1s ease-in;
}

@keyframes boxshadow{
  from {box-shadow: 0rpx 0rpx 0rpx 0rpx #f4f4f4;}
  to {box-shadow: 0rpx 10rpx 30rpx 10rpx #f4f4f4;}
}
